{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "jsx": "react",
    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "resolveJsonModule": true,
    "outDir": "./dist",

    "typeRoots": ["node_modules/@types", "src/@types"],
    "esModuleInterop": true
  },
  "include": ["src/**/*", "jest.config.js"]
}
